<%- include("../user/partials/head.ejs"); -%>
<div class="hidden md:flex w-full">
    <%- include("../user/partials/desktoptitlebar.ejs"); -%>

</div>
<div class="my-6 px-16 hidden md:block">
    <a href="/home" class="text-gray-500">Home </a>
    <a href="/home/editprofile" class="text-gray-500">/ Account </a>
    <span class="text-lg font-medium">/ Wishlist</span>
</div>
<div class="md:px-32 ">
    <div class="flex shadow-lg shadow-gray-200 bg-white p-3 gap-5 justify-between md:hidden">
        <div class="flex gap-5">
            <form action="/home/profile">
                <button class="material-symbols-outlined text-gray-500">
                    arrow_back
                </button>
            </form>

            <h2 class=" text-gray-500 font-medium">Wishlist </h2>
        </div>
        <div class="flex gap-3">
            <form action="/home/cart">
                <button class="material-symbols-outlined text-gray-500">
                    shopping_cart
                </button>
            </form>

        </div>
        
    
    </div>
    <%if(list.length > 0){%>
    
    <div class="mt-5 px-2">
        <div class="flex justify-between my-3 md:w-full">
            <span class="font-bold md:text-lg">Wishlist (<%= list.length %>)</span>
            
        </div>

        <%- include("../user/productslistwishlist.ejs"); -%>
    </div>
    <%}else{%>
        <div class=" flex justify-center flex-col items-center h-[600px]">
            <div class="">
                <img class="h-40 w-40" src="/images/wishlist.png" alt="dno">
            </div>
            <h1 class="text-2xl"><strong>Your Wishlist is Empty</strong></h1>
            <p class="text-gray-500 text-sm w-52 text-center">Looks you didnt have added any items to wishlist</p>
            
        </div>
    <%}%>
    <!-- related products -->
    <div class="hidden md:flex md:flex-col">
        <h1 class="text-lg font-medium my-4">Related Products</h1>
        <div>
            
        </div>
        
    </div>
        <!-- footer -->
    <div class="hidden md:flex md:flex-col ">
    
        <div>
            <%- include("../user/partials/footer.ejs"); -%>
        </div>
    
    </div>
</div>
<%- include("../user/partials/close.ejs"); -%>