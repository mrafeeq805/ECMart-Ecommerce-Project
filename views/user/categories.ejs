<%- include("../user/partials/head.ejs"); -%>
<div class="w-full">
    <script src="/javascript/user/category.js"></script>
    <div class="flex shadow-lg shadow-gray-200 bg-white p-3 gap-5 justify-between">
        <div class="flex gap-5">
            <form action="/home">
                <button class="material-symbols-outlined text-gray-500">
                    arrow_back
                </button>
            </form>

            <h2 class=" text-gray-500 font-medium">Categories </h2>
        </div>
        <div class="flex gap-3">
            <form action="/home/search">
                <button class="material-symbols-outlined text-gray-500">
                    search
                </button>
            </form>

            <form action="/home/cart">
                <button class="material-symbols-outlined text-gray-500">
                    shopping_cart
                </button>
            </form>

        </div>
        
    
    </div>
    <!-- search -->
    <div class="px-3">
        <div class=" flex pl-3 items-center mt-3 bg-gray-100 rounded-lg">
            <input id="search-category" class="border-none h-10 w-full bg-inherit px-3" type="text" placeholder="Search Category...">
            <svg onclick="searchCategory()" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="gray" class="bi bi-search mr-3" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
            </svg>
            
        </div>
    </div>
    <!-- components -->
    <div class="w-full mt-3">
        <div class="flex gap-3 items-center px-2">
            <span class="font-medium text-gray-500">Components</span>
            <div class="h-[0.1em] bg-gray-200 w-full"></div>
        </div>
        <div id="category-container" class="mt-3 flex flex-col gap-3">
            <%- include("../user/categorylistview.ejs",{categorylist:categorylist}); -%>
        </div>
    </div>
    
</div>
<%- include("../user/partials/close.ejs"); -%>