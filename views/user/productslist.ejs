<span class="text-sm text-gray-500">Showing <%= list.length %> Products</span>
<div class="grid grid-cols-2 gap-3 md:grid-cols-5 mt-3 overflow-scroll">
    <script src="/javascript/user/product.js"></script>
    
    <!-- productcard -->
    <% list.forEach((item)=>{ %>
        <div class="relative ">
            <a href="/productdetails/<%= item.product_id%>">
                <div class="border-[1px] border-[#d9d9d9] w-full h-full rounded-lg relative">
                    <div class="bg-[#1a91ff1f] relative ">
                        <div class="h-40 flex justify-center">
                            <img class="h-full" src="<%= item.image %>" alt="thumb" height="100px">
                        </div>
                        
                    </div>
                    <div class="px-2 p-2">
                        <span class="block font-medium text-sm"><%= item.title %></span>
                        <span class="block text-xs text-gray-400 mt-1"><%= item.seller %></span>
                        <span class="font-medium text-sm">₹<%= item.price %></span>
                        <span class="text-green-500 ml-1 text-sm font-medium"><s>₹<%= item.sell_price %></s></span>
                    </div>
                    
            
                    
                    
            
                </div>
            </a>
            
            <button id="<%= item.product_id %>" onclick="addWishlist(this)" 
                class="
                <%if(wishlist.length > 0){%>
                <%if(wishlist.indexOf(item.product_id.toString()) !== -1){%>
                    material-icons
                    <%}else{%>
                    material-symbols-outlined
                <%}%>
                <%}else{%>
                    material-symbols-outlined
                <%}%>
                    rounded-full h-[40px] w-[40px] bg-white absolute top-1 right-1 flex items-center justify-center text-blue-500">
                favorite
            </button>
            
                
            <button id="<%= item.product_id %>" onclick="moveToCart(this)" class="material-symbols-outlined bg-blue-500 absolute bottom-0 right-0 text-white py-1 px-3 rounded-tl-lg rounded-br-lg">
                shopping_cart
            </button>
            
            
        </div>

    

    
    <% }) %>
    
    
    
</div>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>