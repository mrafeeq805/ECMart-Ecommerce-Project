<%- include("../user/partials/head.ejs"); -%>
<div class="w-full md:px-2 ">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
    <%- include("../user/partials/desktoptitlebar.ejs"); -%>
    <!-- search -->
    <div class="hidden px-3 md:hidden">
        <div class="bg-white flex pl-3 items-center mt-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="gray" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
            </svg>
            <input class="h-10 w-full bg-inherit px-3" type="text" placeholder="Search Compents and Projects...">
        </div>
    </div>
    <!-- banners -->
    <%- include("../user/partials/slidebanner.ejs"); -%>
    <!-- components by category -->
    <div class="w-full mt-3">
        <div class="flex gap-3 items-center px-2 justify-between">
            <span class=" text-gray-500 md:text-xl">Components By Cateogory</span>
            <a href="/allcategories" class="md:hidden text-[#1a91ff] text-sm md:text-lg">See All</a>
        </div>
        <div class="mt-3 flex flex-col gap-3">
            <%- include("../user/categorylistview.ejs",{list:categorylist}); -%>
            
        </div>
    </div>
    <div class="rounded-lg bg-gray-200 p-7 md:p-12 my-2 mx-2">
        <img src="/images/baner.png" class="" alt="...">
    </div>
    <!-- latest components -->
    <div class="w-full mt-3">
        <div class="flex gap-3 items-center px-2 justify-between">
            <span class=" text-gray-500 md:text-lg">Latest On Components</span>
            <!-- <span class="text-[#1a91ff] text-sm md:text-lg">See All</span> -->
        </div>
        <div class="mt-3 flex flex-col gap-3 px-2">
            <%- include("../user/productslistsub.ejs",{productlist:productlist}); -%>
            
        </div>
    </div>
    
    <div class="rounded-lg bg-gray-200 p-7 md:p-12 my-2 mx-2">
        <img src="/images/baner.png" class="" alt="...">
    </div>
    <!-- popular projects -->
    <div class="w-full mt-3">
        <div class="flex gap-3 items-center px-2 justify-between">
            <span class=" text-gray-500 md:text-lg">Popular Projects</span>
            <!-- <span class="text-[#1a91ff] text-sm md:text-lg">See All</span> -->
        </div>
        <div class="mt-3 flex flex-col gap-3 px-2">
            <%- include("../user/productslistsub.ejs"); -%>
            
        </div>
    </div>
    <%- include("../user/partials/footer.ejs"); -%>
</div>

<%- include("../user/partials/close.ejs"); -%>
