<%- include("../user/partials/head.ejs"); -%>
<!-- search -->
<div class="hidden md:flex w-full">
    <%- include("../user/partials/desktoptitlebar.ejs"); -%>

</div>

<div class="h-full md:h-auto">

    
    <div class="bg-[#1a91ff] h-full md:flex md:flex-col md:bg-gray-100 md:justify-center md:items-center">
        <div class="flex justify-between py-4 px-3 h-max md:hidden">
            <span class="text-white text-xl">Login / Signup</span>
            <form action="/home">
                <button class="material-symbols-outlined text-white text-2xl">
                    close
                </button>
            </form>

        </div>
        <div class="md:flex  md:rounded-3xl md:w-6/12 md:h-[450px] md:my-20 h-full">
            <div class="md:w-5/12 md:flex hidden  md:flex-col justify-between items-center py-4 bg-[#1a91ff] md:rounded-l-3xl">
                <div>
                    <span class="text-3xl font-bold text-white">Login / Signup</span>
                </div>
                <div>
                    <img class="h-48" src="/images/login.png" alt="login">
                </div>

            </div>
            <div class="md:w-7/12 md:rounded-r-3xl h-full md:relative">
                
                    <div class="rounded-t-3xl bg-white  h-full pt-8 pb-2 px-4 flex flex-col justify-between md:pt-4  md:rounded-l-none">
                        <form action="/home/verifyotp" method="post">
                            <div>
                                <div>
                                    <h3 class="text-xl font-medium mb-2">Enter OTP</h3>
                                    <h4 class="text-gray-400 text-sm">We have sent an OTP to your phone number</h4>
                                    <span class="text-gray-400 text-sm">Phone Number &nbsp:  </span><span id="otp-phone" class="text-gray-400 text-sm">&nbsp <%= phone%></span>
                                    <a href="/home/login" class="text-blue-400 font-medium">&nbsp Edit</a>
                                </div>
                            
                                <!-- otp --> 
                                <div class="w-full flex mt-6 gap-3">
        
                                    
                                    <input class="border-2 rounded-lg w-full py-3 text-center" type="number" name="otp" placeholder="Enter Recieved OTP">
                                    
                              
                                </div>
                                <%if(locals.error){%>
                                    <span class="text-xs text-red-500"><%= error%></span>
                                <%}%>
                            </div>
                
                            
                            <button class="absolute bottom-3 md:left-5 md:right-5 p-2 w-max px-36 md:px-32  bg-[#1a91ff] rounded-full font-medium text-white mt-8">
                                Continue
                            </button>
                        </form>
      
                        
            
                    </div>
                

            </div>

        </div>
        
    </div>
</div>
<!-- footer -->
<div class="hidden md:flex md:flex-col ">
    
    <div>
        <%- include("../user/partials/footer.ejs"); -%>
    </div>
    
</div>
<%- include("../user/partials/close.ejs"); -%>