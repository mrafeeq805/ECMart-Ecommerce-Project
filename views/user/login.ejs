<!-- search -->
<div class="hidden md:flex w-full">
    <%- include("../user/partials/desktoptitlebar.ejs"); -%>

</div>

<div class="h-full md:h-auto">
    <form action="/home/sendotp" method="post">
        <div class="bg-[#1a91ff] h-full md:flex md:flex-col md:bg-gray-100 md:justify-center md:items-center">
            <div class="flex justify-between py-4 px-3 h-max md:hidden">
                <span class="text-white text-xl">Login / Signup</span>
                
                <a href="/home" class="material-symbols-outlined text-white text-2xl">
                    close
                </a>
    
            </div>
            <div class="md:flex md:rounded-3xl md:w-6/12 md:h-[450px] md:my-20 h-full">
                <div class="md:w-5/12 md:flex hidden  md:flex-col justify-between items-center py-4 bg-[#1a91ff] md:rounded-l-3xl">
                    <div>
                        <span class="text-3xl font-bold text-white">Login / Signup</span>
                    </div>
                    <div>
                        <img class="h-48" src="/images/login.png" alt="login">
                    </div>
    
                </div>
                <div class="md:w-7/12 md:rounded-r-3xl h-full  md:relative">
                    <div class="rounded-t-3xl bg-white  h-full pt-8 pb-2 px-4 flex flex-col justify-between md:pt-4  md:rounded-l-none">
                        <div class="md:rounded-r-3xl">
                            <div>
                                <h3 class="text-xl font-medium">Login to explore new experience</h3>
                                <h4 class="text-gray-400 text-sm">Enter your phone number to continue</h4>
                            </div>
                
                            <!-- phone --> 
                            <div class="w-full mt-12">
                                <div class="bg-white mb-2">
                                    <label for="phone" class="text-gray-400 text-sm">
                                        Phone Number
                                    </label>
                                </div>
                                <div class="flex items-center px-2 w-full">
                                    <span class="text-gray-400 mr-3">+91</span>
                                    <input type="text" id="phone-login" name="phone" class="border-none w-full h-10 px-1 text-sm border-b-2 outline-none" placeholder="Enter 10 digit Phone Number">
                                </div>

                                
                                
                            </div>
                            <span id="phone-login-error" hidden class="text-xs text-red-500">Enter a valid phone number</span>
                            
                            <div class="w-80 mt-4">
                                <span class="text-xs text-gray-500 ">By continuing, you agree Shopâ€™s <span class="text-[#1a91ff]">Terms & Conditions</span>  and <span class="text-[#1a91ff]">Privacy & Policy</span></span>
                            </div>
                            
                        </div>
            
                        
                        <button onclick="return validateLogin()" type="submit" class="absolute bottom-3 md:left-5 md:right-5 p-2 w-max px-36 md:px-32 bg-[#1a91ff] rounded-full font-medium text-white">
                            Continue
                        </button>
                        
            
                    </div>
                </div>
    
            </div>
            
        </div>
    </form>
    
    
</div>
<!-- footer -->
<div class="hidden md:flex md:flex-col ">
    
    <div>
        <%- include("../user/partials/footer.ejs"); -%>
