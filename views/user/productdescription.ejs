<%- include("../user/partials/head.ejs"); -%>
<!-- mobile view -->
<div class="bg-gray-50 md:hidden">
    <div class="flex shadow-lg shadow-gray-200 bg-white p-3 gap-5 justify-between">
        <div class="flex gap-5">
            <form action="/home">
                <button class="material-symbols-outlined text-gray-500">
                    arrow_back
                </button>
            </form>

            <h2 class="text-lg text-gray-500 font-medium">Product ID #<%= item.product_id%> </h2>
        </div>
        <div class="flex gap-3">
            <form action="/home/search">
                <button class="material-symbols-outlined text-gray-500">
                    search
                </button>
            </form>

            <form action="/home/wishlist">
                <button class="material-symbols-outlined text-gray-500">
                    favorite
                </button>
            </form>
            <form action="/home/cart">
                <button  class="material-symbols-outlined text-gray-500">
                    shopping_cart
                </button>
            </form>
            
        </div>
        
    
    </div>
    <div class="mt-4">
        <!-- image section -->
        <div>
            <div class="w-full bg-gray-100 relative p-8">
                <img class="h-64 w-full object-cover" src="<%= item.image %>" alt="f">
                <button class="hidden bg-white rounded-full h-[40px] w-[40px] material-symbols-outlined p-1 absolute top-2 right-2">
                    share
                </button>
            </div>
        </div>
        <!-- text section -->
        <div class="px-3">

            <div>
                <%- include("../user/partials/description.ejs",{item:item}); -%>
            </div>
            
            <!-- product description -->
            <div class="flex flex-col gap-3">
                <h1 class="text-lg font-medium">Product Description</h1>
                <p class="text-gray-500 text-sm"><%= item.description %></p>
            </div>
            <!-- material & care -->
            <div class="flex flex-col gap-2 my-5">
                <h1 class="text-lg font-medium">Material & Care</h1>
                <div>
                    <span class="text-gray-500 text-sm block">Polyster an wash as per material thing acts</span>
                    <span class="text-gray-500 text-sm">Manufacterd By :&nbsp;</span><span class="text-blue-400 font-medium"> Suditi Sports Apparell Limited</span>
                </div>
                <a class="text-blue-400"> View Information about Manufactorer</a>
                
            </div>
            <!-- related products -->
            <div class="my-5">
                <h1 class="text-lg font-medium">Related Products</h1>
                <div class="my-3">
                    <%- include("../user/productslistsub.ejs"); -%>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Desktop view -->
<div class="hidden md:flex md:flex-col">
    <!-- search -->
    <div class="hidden md:flex w-full">
        <%- include("../user/partials/desktoptitlebar.ejs"); -%>
    
    </div>
    <script src="/javascript/user/product.js"></script>
    <!-- description -->
    <div class="mt-10 w-full px-36 ">
        <div class="mb-6">
            <a href="/home" class="text-gray-500">Home </a>
            <span class="text-gray-500">/ Components</span>
            <a href="/categoryproducts/<%= item.category%>" class="text-gray-500">/ <%= item.category%></a>
            <span class="text-lg font-medium">/ <%= item.title%></span>
        </div>
        <div class="flex gap-12">
            
            <!-- image -->
            <div class="w-full">
                <div class="rounded-md border-2 flex justify-center items-center">
                    <img class="h-96" src="<%= item.image%>" alt="im">

                </div>
                
                <!-- material & care -->
                <div class="flex flex-col gap-2 my-5">
                    <h1 class="text-lg font-medium">Material & Care</h1>
                    <div>
                        <span class="text-gray-500 text-sm block">Polyster an wash as per material thing acts</span>
                        <span class="text-gray-500 text-sm">Manufacterd By :&nbsp;</span><span class="text-blue-400 font-medium"> Suditi Sports Apparell Limited</span>
                    </div>
                    <a class="text-blue-400"> View Information about Manufactorer</a>
        
                </div>

            </div>
            <!-- description -->
            <div class="w-full">
                <div>
                    <%- include("../user/partials/description.ejs"); -%>
                </div>

            </div>

        </div>
    </div>
    <!-- product description -->
    <div class="flex flex-col gap-3 px-32 mb-4"> 
        <h1 class="text-lg font-medium">Product Description</h1>
        <p class="text-gray-500 text-sm"><%= item.description %></p>
    </div>
    <!-- related products -->
    <div class="my-5 px-32">
        <h1 class="text-lg font-medium">Related Products</h1>
        <div class="my-3">
            <%- include("../user/productslistsub.ejs"); -%>
        </div>
    </div>
    <div>
        <%- include("../user/partials/footer.ejs"); -%>
    </div>
    <%- include("../user/partials/close.ejs"); -%>
    
    

</div>
