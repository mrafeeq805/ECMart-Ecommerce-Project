<div class="flex flex-col gap-3">
    <%list.forEach((item)=>{%>
    <div class="bg-white rounded-lg px-3 pt-2 relative md:border-2">
        <div> 
            <span class="font-medium block"><%= item.name %></span>
            <span class="block text-sm"><%= item.building %>, <%= item.area %> , <%= item.city %></span>
            <span class="block text-sm"><%= item.city %> (dis), <%= item.state %></span>
            <span class="block text-sm"><%= item.pin %>, India</span>
            <span class="font-medium block text-sm mt-1">+91 <%= item.phone %></span>
            <div class="px-4 flex justify-center items-center bg-gray-100 w-max rounded-md pb-1 absolute top-2 right-2">
                <span class="text-gray-400 text-sm capitalize"><%= item.category %></span>
            </div>
        </div>
        <div class="flex mt-2 items-center justify-between border-t-[1px]">
            <form class="w-full" action="/home/showeditaddress" method="post">
                <button class="flex justify-center items-center border-r-[1px] w-full p-1">
                    <input name="id" type="hidden" value="<%= item._id%>">
                    <input type="hidden" name="meth" value="new_add">
                    <span class="material-symbols-outlined mr-2 text-gray-400 text-lg">
                        edit
                    </span>
                    <span class="text-sm text-gray-400">Edit</span>
                </button>
            </form>

            <form class="w-full" action="/home/deleteaddress" method="post">
                <input name="id" type="hidden" value="<%= item._id%>">

                <button class="flex justify-center items-center w-full p-1">
                    <span class="material-symbols-outlined mr-2 text-gray-400 text-lg">
                        delete
                    </span>
                    <span class="text-sm text-gray-400">Delete</span>
                </button>
            </form>
            
        </div>
    </div>
    <%})%>
</div>
