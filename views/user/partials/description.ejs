<div>
    <h1 class="text-lg font-medium"><%= item.seller %></h1>
            <span class="text-gray-500 block "><%= item.title %></span>
            
            <div class="mt-2">
                <span class="text-gray-400 mt-4">Price</span>
                <div class="flex gap-2">
                    <span class="text-2xl font-medium">₹<%= Math.round(item.sell_price - ((item.sell_price * item.discount) / 100) ) %> </span>
                    <span class="text-xl text-gray-500"><s>₹<%=  item.sell_price  %></s></span>
                    <div class="w-[1px] bg-gray-500"></div>
                    <span class="text-xl font-medium text-green-500 leading-tight"><%= item.discount %>% off</span>
                </div>
                <div class="mt-[-7px]">
                    <span class="text-sm text-gray-500 ">Inclusive of all taxes</span>
                </div>
                
            </div>
            <script src="/javascript/user/product.js"></script>

            <!-- delivery details -->
            <div class="mt-5">
                <span class="text-gray-500">Delivery Details</span>
                <div class="flex my-2 border-2 justify-between px-2 items-center bg-white md:w-2/3">
                    <input type="text" name="" id="" placeholder="Enter Pincode" class="bg-inherit h-10 w-full border-none ">
                    <label class="text-xs text-gray-500" for="">CHECK</label>
                </div>
                <span class="text-xs text-gray-500">Enter 6 digit pincode to check exact delivery date</span>
            </div>
            <!-- delivery features -->
            <div class="mt-3 space-y-2">
                <div class="flex gap-3 items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 640 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2023 Fonticons, Inc.-->
