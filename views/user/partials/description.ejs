                    </svg>
                    <span class="text-sm text-gray-500">10 day Return / Exchange Policy</span>
                </div>
            </div>
            <div class="">
                <div class="flex gap-3 my-4">
                    <form class="w-full" action="/home/addtocart" method="post">
                        <input name="id" value="<%= item.product_id %>" type="hidden">
                        <button class="bg-[#1a91ff] flex items-center justify-center gap-3 rounded-sm p-3 w-full">
                            <span class="material-symbols-outlined text-white">
                                shopping_cart
                            </span>
                            <span class="text-white">Add to cart</span>
                        </button>
                    </form>
                    
                    <button id="<%= item.product_id %>" onclick="moveWishlist(this)" class=" flex items-center justify-center gap-3 rounded-sm p-3 w-full border-2 border-[#1a91ff]">
                        <span class="material-symbols-outlined text-[#1a91ff]">
                            favorite
                        </span>
                        <span class="text-[#1a91ff]">Move to wishlist</span>
                    </button>
                </div>
            </div>
            <!-- product details -->
            <div class="my-5 flex flex-col gap-3">
                <h1 class="text-lg font-medium">Product Details</h1>
                <h4 class="text-gray-500 text-sm font-medium">Specifications</h4>
                <!-- Specifications grid -->
                <div class="grid grid-cols-2 gap-4">
                    <% item.specifications.forEach((i)=>{ %>
                        <div class="border-b-[1px] flex flex-col pb-2">
                            <span class="text-gray-500 text-sm font-medium"><%= i.split(' : ')[0] %></span>
                            <span class="font-medium"><%= i.split(' : ')[1] %></span>
                        </div>
                    <% }) %>
                    
                </div>
            </div>
           
            
</div>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
            