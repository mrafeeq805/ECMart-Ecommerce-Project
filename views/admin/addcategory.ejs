<div id="addcategory" class="transition ease-out duration-3000 w-full justify-center items-center hidden fixed inset-0 z-50 bg-[rgba(0,0,0,0.2)]">
    <div  class="w-full flex justify-center items-center">

        
        <div class="bg-white w-2/5 p-6 rounded-sm mt-3 relative">
            <div class="border-b-2 w-max pb-1">
                <span class="text-xl font-semibold ">Add Category</span>
                
            </div>
            <script src="/javascript/admin/category.js"></script>
            <form action="/admin/addcategory" method="post" enctype="multipart/form-data">
                <label class="block my-2 text-[#00000080]" for="">Category Name</label>
                <input id="add-category-name" name="add_category_name" class="border rounded-md p-2 w-full mb-2" type="text">
                <span id="add-category-name-error" class="text-red-500 text-xs hidden">category name cannot empty!</span>
                
                <!-- image -->
                <label class="block my-2 text-[#00000080]" for="">Image Icon</label>
                <div class="flex gap-4 mb-2">
                    <div class="flex items-center justify-center w-1/2">

                        <label for="add-category-upload" class="flex flex-col items-center justify-center w-full h-36 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-bray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                            <div id="add-category-preview-div" class="hidden justify-center items-center w-full" >
                                <img id="add-category-preview" class="h-32" src="/images/iphone.png" alt="image">
                                
                            </div>
                            <div id="add-category-upload-div" class="flex flex-col items-center justify-center pt-5 pb-6">
                                <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                                </svg>
                                <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
                            </div>
                            <input id="add-category-upload" name="add-category-upload" type="file"  class="hidden" />
                        </label>
                        
                        

                    </div> 
                    
                    
                </div>
                <span id="add-category-image-error" class="text-red-500 text-xs hidden">image cannot empty!</span>
                
                
                <!-- category & status -->
                <div class="w-full flex gap-5">
                    <div class="w-full">
                        <label class="block my-2 text-[#00000080]" for="">Main Category</label>
                        <select class="border rounded-md p-3 text-gray-500 w-full" name="add_category_main" id="add_category_main">
                            <option value="Components">Components</option>
                        </select>
                    </div>
                    <div class="w-full">
                        <label class="block my-2 text-[#00000080]" for="">Status</label>
                        <select class="border rounded-md p-3 text-gray-500 w-full" name="add_category_status" id="add_category_status">
                            <option value="Listed">Listed</option>
                            <option value="Unlisted">Unlisted</option>
                        </select>
                    </div>
                    
                </div>
               
                <div class="flex justify-end mt-6">
                    <button type="submit" value="submit" onclick="return validateAddCategory()" class="rounded-md bg-blue-500 text-white text-sm p-3 w-1/2">
                        Add Category
                    </button>
                </div>
                <button type="button" onclick="categoryPopup()" class=" material-symbols-outlined h-[30px] w-[30px] rounded-full text-gray-500 border-gray-500 border-2 absolute top-5 right-5">
                    close
                </button>
            </form>
            
        </div>
        
            
            
        
    </div>
</div>
